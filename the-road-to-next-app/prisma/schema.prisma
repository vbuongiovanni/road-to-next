generator client {
  provider = "prisma-client-js"
  // Generate the client into src/ so imports like '@/generated/prisma' resolve correctly
  output   = "../src/generated/prisma"
}

datasource db {
  url      = env("DIRECT_URL")
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String    @unique
  passwordHash  String
  sessions      Session[]
}

model Session {
  id String @id
  expiresAt DateTime
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SuccessfulClicks {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  numClicks Int          @default(0)
}

model Ticket {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  title     String
  content   String       @db.VarChar(1024)
  status    TicketStatus @default(Open)
  deadline  String       
  bounty    Int          
}

enum TicketStatus {
  Open
  InProgress
  Closed
}
