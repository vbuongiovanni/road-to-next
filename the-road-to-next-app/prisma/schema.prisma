generator client {
  provider = "prisma-client"
  // Generate the client into src/ so imports like '@/generated/prisma' resolve correctly
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model SuccessfulClicks {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  numClicks Int          @default(0)
}

model Ticket {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  title     String
  content   String       @db.VarChar(1024)
  status    TicketStatus @default(Open)
  deadline  String       
  bounty    Int          
}

enum TicketStatus {
  Open
  InProgress
  Closed
}
